#form-wrapper.wheels-form
  .form-header.row
    .col-lg-4.col-md-4.col-sm-4.col-xs-4
    .col-lg-4
      %a{href: "#"} Sign Up

  = form_for @owner, remote: true, url: registration_path("owner"), html: {'data-model' => 'owner'} do |f|
    - if @owner.errors.any?
      .error_messages
        %ul
          - for m in @owner.errors.full_messages
            %li= m

    .form-group
      .row
        .form-label Name
      .row
        = f.text_field :name, :class => 'form-input',
            :placeholder => 'Your name'
      .row
        .help-block

    .form-group
      .row
        .form-label Email
      .row
        = f.text_field :email, :class => 'form-input',
            :placeholder => 'Your email address'
      .row
        .help-block

    .form-group
      .row
        .form-label Password
      .row
        = f.password_field :password, :class => 'form-input',
            :placeholder => 'Password (8 or more letters)'
      .row
        .help-block

    .form-group
      .row
        .form-label Confirm
      .row
        = f.password_field :password_confirmation, :class => 'form-input',
            :placeholder => 'Confirm password'
      .row
        .help-block

    .form-group.row
      = f.submit "Register", class: "btn btn-primary form-btn"
