#form-wrapper.wheels-form
  .form-header.row
    .col-lg-4.col-md-4.col-sm-4.col-xs-4
    .col-lg-4
      %a{href: "#"} Owner Sign In

  = form_for Owner.new, remote: true, authenticity_token: true, url: session_path("owner"), html: {'data-model' => 'owner'} do |f|
    .form-group.row
      .col-lg-1.col-md-1.col-sm-1.col-xs-1
      .help-block

    .form-group.row
      .col-lg-1.col-md-1.col-sm-1.col-xs-1
      = f.text_field :email, :class => 'form-input',
          :placeholder => 'Email'

    .form-group.row
      .col-lg-1.col-md-1.col-sm-1.col-xs-1
      = f.password_field :password, :class => 'form-input',
          :placeholder => 'Password'

    .form-group.row
      .col-lg-1.col-md-1.col-sm-1.col-xs-1
      %button.btn.btn-primary.form-btn{type: "submit"} Sign In
      %a.btn.btn-danger.form-btn{href: login_path} User Sign In
