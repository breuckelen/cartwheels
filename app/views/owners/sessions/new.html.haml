#form-wrapper.wheels-form
  .form-header.row
    .col-lg-4.col-md-4.col-sm-4.col-xs-4
    .col-lg-4
      %a{href: "#"} Sign In

  = form_for @owner, remote: true, url: session_path("owner"), html: {'data-model' => 'owner'} do |f|
    - if @owner.errors.any?
      .error_messages
        %ul
          - for m in @owner.errors.full_messages
            %li= m

    .form-group.row
      .col-lg-1.col-md-1.col-sm-1.col-xs-1
      .help-block

    .form-group.row
      .col-lg-1.col-md-1.col-sm-1.col-xs-1
      = f.text_field :email, :class => 'form-input',
          :placeholder => 'Email'

    .form-group.row
      .col-lg-1.col-md-1.col-sm-1.col-xs-1
      = f.password_field :password, :class => 'form-input',
          :placeholder => 'Password'

    .form-group.row
      .col-lg-1.col-md-1.col-sm-1.col-xs-1
      %button.btn.btn-primary.form-btn{type: "submit"} Sign In
