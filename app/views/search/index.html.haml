-content_for :head do
  =javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyDeTwOMn3ZRwUcETE8wB2zxTVR-Dznbgv0"
  =javascript_include_tag "gmaps.js"

#carts
  #top-content
    %nav#search-bar.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .collapse.navbar-collapse.row
        .col-lg-4
          .nav.navbar-nav.padded
            .home-link
              =link_to "Cartwheels", home_path
        %form.navbar-form.search-form.col-lg-8{role: "search", action: "/search"}
          .form-group
            %input.form-control.form-input#food{type: "text", name: "tq", placeholder: "Food", value: @tq}
            %input.form-control.form-input.location-input#loc{type: "text", name: "lq", placeholder: "Location", value: @lq}
            %button.btn.btn-primary.nav-btn Search

  #main-content
    #title-bar.row
      .col-lg-2
        .column-header
          =link_to "Featured Carts", "#"
      .col-lg-7
        .column-header
          =link_to "Search Results", "#"
      .col-lg-3
        .column-header
          =link_to "Reviews", "#"

    #featured-bar.col-lg-2.column.column-left

    #search-results.col-lg-7.column.column-center
      .column-content
        -@carts.each do |cart|
          =render partial: "carts/cart", locals: {cart: cart, small: true}
        -if @total > 20
          .page-numbers
            %ul.pagination
              %li
                %a{"data-page" => @offset / 20 - 1} &laquo;
                -((@total + 20) / 20).times do |i|
                  %li
                    %a{"data-page" => i}=i + 1
              %li
                %a{"data-page" => @offset / 20 + 1} &raquo;

    #other-results.col-lg-3.column.column-right
