= form_for @cart, :html => {:multipart => true} do |f|
  - if @cart.errors.any?

    #error_explanation
      %h2= "#{pluralize(@cart.errors.count, "error")} prohibited this upload from being saved:"
      %ul
        - @cart.errors.full_messages.each do |msg|
          %li= msg

  %div
    = f.label :name
    %br
    = f.text_field :name

  %div
    = f.label :permit_number
    %br
    = f.text_field :permit_number

  %div
    = f.label :latitude
    %br
    = f.text_field :lat

  %div
    = f.label :longitude
    %br
    = f.text_field :lon

  %div
    = f.label :image
    %br
    = f.file_field :image

  .actions
    = f.submit 'Save'
