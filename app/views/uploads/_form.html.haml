= form_for @upload, :html => {:multipart => true} do |f|
  - if @cart.errors.any?

    #error_explanation
      %h2= "#{pluralize(@cart.errors.count, "error")} prohibited this upload from being saved:"
      %ul
        - @cart.errors.full_messages.each do |msg|
          %li= msg

  = f.fields_for :cart do |c|
    %div
      = c.label :name
      %br
      = c.text_field :name

    %div
      = c.label :permit_number
      %br
      = c.text_field :permit_number

    %div
      = c.label :latitude
      %br
      = c.text_field :lat

    %div
      = c.label :longitude
      %br
      = c.text_field :lon

  %div
    = f.label :image
    %br
    = f.file_field :image

  .actions
    = f.submit 'Save'
